<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                                http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="default">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- OVV -->
        <class>nl.generate.ddl.example.Child</class>
        <class>nl.generate.ddl.example.Parent</class>
        <properties>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="file:///C:/tmp/create.sql"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="file:///C:/tmp//drop.sql"/>
        </properties>

    </persistence-unit>
</persistence>
